{% extends 'base.html.twig' %}

{% block title %}Nos produits - Sinex Store{% endblock %}

{% block content %}
<h1 style="text-align: center">Nos Produits</h1>

    <div class="row product-container">
        {% for product in products %}
            <div class="col-md-4">
                <div class="product-item text-center">
                    <a href="{{ path('product', {'slug': product.slug}) }}"><img src="/uploads/{{ product.illustration }}" alt="" class="img-fluid"></a>
                    <h5>{{ product.name }}</h5>
                    <span class="subtitle">{{ product.subtitle }}</span>
                    <span class="product-price">{{ product.price / 100|number_format(2) }} â‚¬</span>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
